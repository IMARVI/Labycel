<%= form_for(juntum) do |f| %>
  <% if juntum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(juntum.errors.count, "error") %> prohibited this juntum from being saved:</h2>

      <ul>
      <% juntum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
  </div>

  <div class="field">
    <%= f.label :fecha %>
    <%= f.datetime_select :fecha %>
  </div>

  <div class="field">
    <%= f.label :descripcion %>
    <%= f.text_area :descripcion %>
  </div>
    <div style="margin-bottom: 20px" class="input-group">
      <% @usuarios.each do |usuario| %>
        <%= check_box_tag 'juntum[usuario_ids][]', usuario.id, @juntum.usuario_ids.include?(usuario.id), id: dom_id(usuario)%>
        <%= label_tag dom_id(usuario),(usuario.nombre) %>
      <% end %>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
