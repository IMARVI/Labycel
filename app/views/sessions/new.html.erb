<%= form_for(:sessions, :html => { role: "form"}, url: login_path) do |f| %>

<div class="container">
  <div style="margin-top:10px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title">Log In</div>
      </div>

      <div style="padding-top:20px" class="panel-body" >
        <div style="display:none" class="alert alert-danger col-sm-12"></div>
        <form class="form-horizontal" role="form">
          <div style="margin-bottom: 20px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%= f.text_field :nombre, placeholder: 'Ingresa tu usuario', autofocus: true, class:"form-control" %>
          </div>

        <div style="margin-bottom: 20px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
          <%= f.password_field :contrasena, placeholder: 'Ingresa tu contraseÃ±a', autocomplete: "off", class:"form-control" %>
        </div>

        <div style="margin-top:20px" class="form-group">
          <div class="col-sm-12 controls">
            <%= f.submit "Log In" %>
          </div>
        </div>
        </form>
      </div>
    </div>
  </div>
 </div>
<% end %>