<div class="container">
  <div class="page-header">
    <h1>Proyectos</h1>
  </div>
  <div class="jumbotron">

    <% @proyectos.each do |proyecto| %>
        <div class="row">
          <div class="col-xs-8 col-xs-offset-2">
            <div class="well well-lg">
              <div class="usuarioName">
                <%= proyecto.nombre %>
              </div>
              <div class="userInfo">
                <p><strong>Fecha:</strong> <%= proyecto.fecha_inicio %></p>
              </div>
              <div class="btn-group acciones" role="group" aria-label="...">
                <%= link_to 'Edit', edit_proyecto_path(proyecto), class:"btn btn-sm btn-primary" %>
                <%= link_to 'Show', proyecto, class:"btn btn-sm btn-warning" %>
                <%= link_to 'Destroy', proyecto, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-danger" %>
              </div>
            </div>
          </div>
        </div>
    <% end %>

    <br>
    <div class="col-xs-6 col-xs-offset-3">
      <%= link_to 'New Proyecto', new_proyecto_path, class:"btn btn-sm btn-success center-block" %>
    </div>


  </div>
</div>
