<div class="container">
  <div class="page-header">
    <h1>Actividades de: <%= @proyecto.nombre%></h1>
  </div>
  <div class="jumbotron">

    <% @proyecto_actividades.each do |actividad| %>
        <div class="row">
          <div class="col-xs-8 col-xs-offset-2">
            <div class="well well-lg">
              <div class="usuarioName">
                <%= actividad.nombre %>
              </div>
              <div class="userInfo">
                <p><strong>Fecha de inicio:</strong> <%= actividad.fecha_inicio %></p>
                <p><strong>Fecha de fin:</strong> <%= actividad.fecha_final %></p>
                <p><strong>Descripci√≥n:</strong> <%= actividad.descripcion %></p>
                <% if actividad.estatus == 1 %>
                    <p><strong>Completado:</strong> Si</p>
                <%end%>
                <% if actividad.estatus != 1 %>
                    <p><strong>Completado:</strong> No</p>
                <%end%>

              </div>
              <div class="btn-group acciones" role="group" aria-label="...">
                <%= link_to 'Editar', edit_actividad_path(actividad), class:"btn btn-sm btn-primary" %>
                <%= link_to 'Eliminar', actividad, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-danger" %>
              </div>
            </div>
          </div>
        </div>
    <% end %>

  </div>
</div>