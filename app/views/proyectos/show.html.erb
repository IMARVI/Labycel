<div class="container">
  <div class="page-header">
    <h1><%= @proyecto.nombre%></h1>
  </div>
  <div class="row">
    <div class="col-sm-6">

        <h1>Actividades</h1>

      <div class="jumbotron">

        <% @proyecto_actividades.each do |actividad| %>
            <div class="row">
              <div class="col-xs-12">
                <div class="well well-lg">
                  <div class="usuarioName">
                    <%= actividad.nombre %>
                  </div>
                  <div class="userInfo">
                    <p><strong>Fecha de inicio:</strong> <%= actividad.fecha_inicio %></p>
                    <p><strong>Fecha de fin:</strong> <%= actividad.fecha_final %></p>
                    <p><strong>Descripci√≥n:</strong> <%= actividad.descripcion %></p>
                    <% if actividad.read_attribute(:estatus) %>
                        <p><strong>Completado:</strong> Si</p>
                    <%end%>
                    <% if !actividad.read_attribute(:estatus) %>
                        <p><strong>Completado:</strong> No</p>
                    <%end%>
                  </div>
                  <div class="btn-group acciones" role="group" aria-label="...">
                    <%= link_to 'Editar', edit_actividad_path(actividad), class:"btn btn-sm btn-primary" %>
                    <%= link_to 'Eliminar', actividad, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-danger" %>
                  </div>
                </div>
              </div>
            </div>
        <% end %>
        <div class="col-xs-6 col-xs-offset-3">
          <%= link_to 'Agregar Actividad', {:controller => "actividads", :action => "new", :proyecto_id => @proyecto.id}, class:"btn btn-sm btn-success" %>
        </div>

      </div>
    </div>
    <div class="col-sm-6">

        <h1>Usuarios</h1>

      <div class="jumbotron">

        <% @proyecto_usuarios.each do |usuario| %>
            <div class="row">
              <div class="col-xs-12">
                <div class="well well-lg">
                  <div class="usuarioName">
                    <%= usuario.nombre %>
                  </div>
                  <div class="userInfo">
                    <% if usuario.estado == 1 %>
                        <p><strong>Estado:</strong> Activo</p>
                    <%end%>
                    <% if usuario.estado != 1 %>
                        <p><strong>Estado:</strong> Inactivo</p>
                    <%end%>

                  </div>
                </div>
              </div>
            </div>
        <% end %>

      </div>
    </div>

  </div>

</div>